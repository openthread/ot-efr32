#!/bin/bash
# shellcheck disable=SC2034  # $efr32_platforms is unused in this file,
#                              which causes a false positive for this check

readonly efr32_platforms=(efr32mg1 efr32mg12 efr32mg13 efr32mg21)
script_dir="$(dirname "$(realpath "$0")")"
repo_dir="$(dirname "$script_dir")"

efr32_get_boards()
{
    # Gets the list of boards for a given platform
    #
    # Arg $1 -- EFR32 platform

    platform="$1"
    find "$repo_dir/src/$platform" -type d -name 'brd*' -exec basename {} \;
}
