project_name: openthread-efr32-rcp-spi
label: ot-efr32
package: openthread
description: This platform project is used to generate a CMake library for EFR32 RCPs which communicate over SPI.
category: OpenThread Examples
quality: production

component:
  # ot-efr32 components
  - id: ot_headers
    from: ot-efr32
  - id: ot_stack_features_config
    from: ot-efr32
  - id: ot_core_vendor_extension
    from: ot-efr32
  - id: ot_serial_efr32
    from: ot-efr32

  # SDK Components
  - id: sl_main
  - id: sl_main_custom_main
  - id: ot_crash_handler
  - id: ot_platform_abstraction_core
  - id: ot_mbedtls
  - id: ot_ncp_spidrv
  - id: rail_util_pti
  - id: clock_manager
  - id: ot_reset_utils

configuration:
  - name: SL_MAIN_START_TASK_STACK_SIZE_BYTES
    value: 2752
    condition: [sl_main]
  - name: CIRCULAR_QUEUE_LEN_MAX
    value: 16
  - name: SL_OPENTHREAD_STACK_TASK_MEM_SIZE
    value: 4608
  - name: SL_STACK_SIZE
    value: 0x800
    condition: [kernel]

define:
  - name: OPENTHREAD_RADIO
    value: 1

sdk_extension:
- id: ot-efr32
  version: 0.0.1
